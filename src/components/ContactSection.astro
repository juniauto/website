<section id="contact" class="contact-section py-20 bg-[#0a0a0a]">
  <div class="container mx-auto px-4">
    <div class="flex flex-col md:flex-row gap-12">
      <div class="w-full md:w-1/2">
        <h2 class="text-white text-4xl font-bold mb-8">Informações de Contato</h2>
        <div class="space-y-8">
          <div class="flex items-start gap-4">
            <div class="text-[#ffd600] mt-1">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path></svg>
            </div>
            <div>
              <h4 class="text-white font-bold text-xl mb-1">Nosso Endereço</h4>
              <p class="text-gray-400">Estrada do Mendanha, 1370 - Campo Grande<br/>Rio de Janeiro - RJ, 23087-285</p>
            </div>
          </div>
          
          <div class="flex items-start gap-4">
            <div class="text-[#ffd600] mt-1">
               <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path></svg>
            </div>
            <div>
              <h4 class="text-white font-bold text-xl mb-1">Telefone / WhatsApp</h4>
              <p class="text-gray-400">+55 (21) 98276-9969</p>
            </div>
          </div>
          
          <div class="flex items-start gap-4">
            <div class="text-[#ffd600] mt-1">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
            </div>
            <div>
              <h4 class="text-white font-bold text-xl mb-1">Horário de Funcionamento</h4>
              <p class="text-gray-400">Atendimento 24 horas - 7 dias por semana</p>
            </div>
          </div>
        </div>
      </div>
      
      <div class="w-full md:w-1/2">
        <div class="glass-card p-10 border-[#ffd600]/20">
          <h3 class="text-white text-2xl font-bold mb-6">Envie uma Mensagem Direta</h3>
          <form id="contact-form" class="space-y-4">
            <input id="name" type="text" placeholder="Seu Nome" required class="w-full bg-white/5 border border-white/10 rounded-lg py-4 px-6 text-white focus:border-[#ffd600] outline-none transition-colors" />
            <select id="service" class="w-full bg-white/5 border border-white/10 rounded-lg py-4 px-6 text-white focus:border-[#ffd600] outline-none transition-colors">
              <option value="" disabled selected>Qual serviço você precisa?</option>
              <option value="Reboque de Carro">Reboque de Carro</option>
              <option value="Reboque de Moto">Reboque de Moto</option>
              <option value="Carga de Bateria">Carga de Bateria</option>
              <option value="Troca de Pneu">Troca de Pneu</option>
              <option value="Outro">Outro Assunto</option>
            </select>
            <textarea id="message" placeholder="Como podemos ajudar?" rows="4" class="w-full bg-white/5 border border-white/10 rounded-lg py-4 px-6 text-white focus:border-[#ffd600] outline-none transition-colors"></textarea>
            <button type="submit" class="w-full bg-[#ffd600] text-black font-black py-4 rounded-lg uppercase tracking-widest hover:brightness-110 active:scale-95 transition-all flex items-center justify-center gap-2">
              <span>Enviar via WhatsApp</span>
              <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/></svg>
            </button>
          </form>

          <script>
            document.getElementById('contact-form')?.addEventListener('submit', (e) => {
              e.preventDefault();
              const name = (document.getElementById('name') as HTMLInputElement).value;
              const service = (document.getElementById('service') as HTMLSelectElement).value;
              const message = (document.getElementById('message') as HTMLTextAreaElement).value;
              
              const text = `OlÃ¡, meu nome Ã© *${name}*.\nGostaria de falar sobre: *${service}*.\n\nMensagem: ${message}`;
              const url = `https://wa.me/5521982769969?text=${encodeURIComponent(text)}`;
              
              window.open(url, '_blank');
            });
          </script>
        </div>
      </div>
    </div>
  </div>
</section>
