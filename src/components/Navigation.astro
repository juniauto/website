    <div class="hidden md:flex items-center gap-8 text-sm font-bold uppercase tracking-wider text-gray-400">
      <a href={isHome ? "#about" : `${siteUrl}#about`} class="hover:text-[#ffd600] transition-colors">Sobre</a>
      <a href={isHome ? "#services" : `${siteUrl}#services`} class="hover:text-[#ffd600] transition-colors">Servi√ßos</a>
